.projects-index
  max-width 1024px
  h1
    text-align center

// PROJECTS INDEX PANELS
.projects-index
  width 90%
  margin 0 auto
.projects-index .panel
  h2
    font-size 26px
    color dark
  background-position 28% 0%
  background-size inherit
  text-align center
  width 21%
  height 347.93px
  z-index -1
  opacity .8
  display inline-block
  float left
  margin 6%
  .panel-content
    box-sizing border-box
    background transparent
    position relative
    word-break break-word
    margin 0
    height 100%
    color light
    // background rgba(0,0,0,.5)
    border 1px solid transparent
    &:hover
      background transparent
      color dark
      border 1px dashed dark // compiales as 1em solid rgba(0,0,0,0.87)