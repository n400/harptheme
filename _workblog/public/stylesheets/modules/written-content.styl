.post-nest
  .index-item
    background transparent
.written-content
  padding 1em
  max-width 30em
  margin 0 auto
  ol, ul
    list-style-type disc
  p, img, video
    width 100%
  figure.left
    margin-right 1em
  figure.right
    margin-left 1em
  figure
    display block
    margin 2% 0
    figcaption
      padding 15px
      margin-top -15px
      background ltgrey
      -moz-box-sizing border-box
      box-sizing border-box
  .right
    float right
    width 40%
  blockquote
    margin-left 0
    margin-right 0
    @media (min-width: 43.75em)
      margin-left -1em